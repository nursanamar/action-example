{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
					<i class="fa fa-save"></i>
				</button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
					<i class="fa fa-reply"></i>
				</a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li>
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-pencil"></i>
					{{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
					<ul class="nav nav-tabs">
						<li class="active">
							<a data-toggle="tab" href="#general"><i class="fa fa-home"></i>&nbsp;General</a>
						</li>
						<li>
							<a data-toggle="tab" href="#facebook"><i class="fa fa-facebook-f"></i>&nbsp;{{ text_facebook }}</a>
						</li>
						<li>
							<a data-toggle="tab" href="#google"><i class="fa fa-google"></i>&nbsp;{{ text_google }}</a>
						</li>
						<li>
							<a data-toggle="tab" href="#sms"><i class="fa fa-envelope"></i>&nbsp;SMS</a>
						</li>
						<li>
							<a data-toggle="tab" href="#email"><i class="fa fa-at"></i>&nbsp;Email</a>
						</li>
						<li>
							<a href="#tab-help" data-toggle="tab"><i class="fa fa-question-circle"></i> {{ tab_help }}</a>
						</li>
					</ul>
					<div class="tab-content">
						<div id="general" class="tab-pane fade in active">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<input {% if module_hp_social_login_status %} checked {% endif %} type="checkbox" name="status" data-toggle="toggle">
								</div>
							</div>
							<div class="form-group">
							<label class="col-sm-2 control-label">{{ entry_customer_group }}
								<span class="help">
									{{ help_customer_group }}
								</span>
							</label>
								<div class="col-sm-10">
									<select name="customer_group" class="form-control">
										{% for customer_group in customer_groups %}
											<option {% if customer_group.customer_group_id == module_hp_social_login_customer_group %} selected {% endif %} value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_checkout_login }}
								<span class="help">
									{{ help_checkout_login }}
								</span>
								</label>
								<div class="col-sm-10">
									<input name="guest_checkout" type="checkbox" data-toggle="toggle" value="1" {% if guest_checkout %} checked="checked" {% endif %}>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_captcha }}
								<span class="help">
									{{ help_captcha }}
								</span>
								</label>
								<div class="col-sm-10">
									<input {% if module_hp_social_login_captcha_status %} checked {% endif %} type="checkbox" name="captcha_status" data-toggle="toggle">
								</div>
							</div>
						</div>
						<div id="facebook" class="tab-pane fade">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<input {% if module_hp_social_login_facebook_status %} checked {% endif %} type="checkbox" name="facebook_status" data-toggle="toggle">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_facebook_app_id }}</label>
								<div class="col-sm-10">
									<input value="{{ module_hp_social_login_facebook_app_id }}" type="text" name="facebook_app_id" class="form-control">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_facebook_app_secret }}</label>
								<div class="col-sm-10">
									<input value="{{ module_hp_social_login_facebook_app_secret }}" type="text" name="facebook_app_secret" class="form-control">
								</div>
							</div>
						</div>
						<div id="google" class="tab-pane fade">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<input {% if module_hp_social_login_google_status %} checked {% endif %} type="checkbox" name="google_status" data-toggle="toggle">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_google_client }}</label>
								<div class="col-sm-10">
									<input value="{{ module_hp_social_login_google_client }}" type="text" name="google_client" class="form-control">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_google_secret }}</label>
								<div class="col-sm-10">
									<input value="{{ module_hp_social_login_google_secret }}" type="text" name="google_secret" class="form-control">
								</div>
							</div>
						</div>
						<div id="sms" class="tab-pane fade">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<input {% if module_hp_social_login_sms_status %} checked {% endif %} type="checkbox" name="sms_status" data-toggle="toggle">
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-2" for="input-expiry">
									<span data-toggle="tooltip" title="{{ help_expiry }}">
										{{entry_expiry }}
									</span>
								</label>
								<div class="col-sm-10">
									<input type="number" name="sms_expiry" class="form-control" value="{{ module_hp_social_login_sms_expiry }}"/>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_message }}</label>
								<div class="col-sm-10">
									{% for language in languages %}
										{% set the_value = _context['module_hp_social_login_message_'~language.language_id] is defined ? _context['module_hp_social_login_message_'~language.language_id] : null %}

										<div class="input-group">
											<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/></span>
											<textarea row="30" name="message_{{ language.language_id }}" class="form-control"/>{{ the_value }}</textarea>
										</div>
								{% endfor %}
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-gateway">{{ entry_gateway }}</label>
								<div class="col-sm-10">
									<select id="input-gateway" name="sms_gateway" class="form-control">
										<option {% if module_hp_social_login_sms_gateway == "zenviva" %} selected {% endif %} value="zenviva">Zenviva</option>
										<option {% if module_hp_social_login_sms_gateway == "wavecell" %} selected {% endif %} value="wavecell">Wavecell</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-2" for="input-userkey">{{ entry_userkey }}</label>
								<div class="col-sm-10">
									<input type="text" name="sms_userkey" class="form-control" value="{{ module_hp_social_login_sms_userkey }}"/>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-2" for="input-passkey">{{ entry_passkey }}</label>
								<div class="col-sm-10">
									<input type="text" name="sms_passkey" class="form-control" value="{{ module_hp_social_login_sms_passkey }}"/>
								</div>
							</div>
						</div>

						 <div class="tab-pane" id="tab-help">
						 <legend>{{ heading_title }}</legend>
                            <div class="alert alert-info"><i class="fa fa-info-circle"></i>
                                {{ text_version }}: {{ version }}</div>
                <legend>{{ text_support }}</legend>
            <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_support_content }}</div>                            
                <div>
                    <img width="150" src="view/image/logohpwd.png" />
                      <p>
                        <a target="_blank" href="http://hpwebdesign.id">http://hpwebdesign.id</a>  <br />
                        <a target="_blank" href="mailto:support@hpwebdesign.id">support@hpwebdesign.id</a>  
                      </p>
                  </div>
           </div>

						<div id="email" class="tab-pane fade">
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<input {% if module_hp_social_login_email_status %} checked {% endif %} type="checkbox" name="email_status" data-toggle="toggle">
								</div>
							</div>

							<div class="form-group">
							</div>

							<ul class="nav nav-tabs" id="language">
								{% for language in languages %}
									<li>
										<a data-toggle="tab" href="#language{{ language.language_id }}"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"/>
											{{ language.name }}</a>
									</li>
								{% endfor %}
							</ul>
							<div class="tab-content">
								{% for language in languages %}
									<div
										class="tab-pane" id="language{{ language.language_id }}">

										{# Resend Text #}
										<div class="form-group">
											<label class="col-sm-2 control-label">
												{{ entry_resend_text }}
												<span class="help">
													{{ help_resend_text }}
												</span>
											</label>
											<div class="col-sm-10">
												<textarea name="email_resend_text_{{ language.language_id }}" class="form-control resend-text">
													{{ _context["module_hp_social_login_email_resend_text_" ~ language.language_id] }}
												</textarea>
											</div>
										</div>

										{# Email text #}
										<div class="form-group">
											<label class="col-sm-2 control-label">
												{{ entry_email_text }}
												<span class="help">
													{{ help_email_text }}
												</span>
											</label>
											<div class="col-sm-10">
												<textarea name="email_verification_text_{{ language.language_id }}" placeholder="{{ entry_email_text }}" class="form-control email-text">
													{{ _context["module_hp_social_login_email_verification_text_" ~ language.language_id] }}
												</textarea>
											</div>
										</div>

										{# Email message text #}
										<div class="form-group">
											<label class="col-sm-2 control-label">
												{{ entry_message_text }}
												<span class="help">
													{{ help_message_text }}
												</span>
											</label>
											<div class="col-sm-10">
												<textarea name="email_message_text_{{ language.language_id }}" placeholder="{{ entry_message_text }}" class="form-control message-text">
													{{ _context["module_hp_social_login_email_message_text_" ~ language.language_id] }}
												</textarea>
											</div>
										</div>

									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="view/javascript/summernote/summernote.js" type="text/javascript"></script>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet"/>
<script src="view/javascript/summernote/summernote-image-attributes.js" type="text/javascript"></script>
<script src="view/javascript/summernote/opencart.js" type="text/javascript"></script>


<style>
	.help {
		color: #888;
		font-weight: normal;
		font-size: 11px;
		display: block;
		margin-top: 3px;
		margin-bottom: 10px;
		font-style: italic;
	}
</style>
<script type="text/javascript">
	$(document).ready(() => {
		$(".resend-text").summernote({
            height:100
        });

        $(".email-text").summernote({
            height:100
        });

        $(".message-text").summernote({
            height:300
        });
		$('#language a:first').tab('show');
	})
</script>
{{ footer }}
